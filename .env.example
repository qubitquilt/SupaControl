# SupaControl Configuration Example
# Copy this file to .env and fill in your values

# Server Configuration
SERVER_PORT=8080
SERVER_HOST=0.0.0.0

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USER=supacontrol
DB_PASSWORD=your-secure-password-here
DB_NAME=supacontrol

# JWT Secret (REQUIRED - Use a long random string)
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters

# Kubernetes Configuration
# Leave empty for in-cluster config, or provide path to kubeconfig
KUBECONFIG=

# Ingress Configuration
DEFAULT_INGRESS_CLASS=nginx
DEFAULT_INGRESS_DOMAIN=supabase.example.com

# Supabase Helm Chart Configuration
SUPABASE_CHART_REPO=https://supabase-community.github.io/supabase-kubernetes
SUPABASE_CHART_NAME=supabase
SUPABASE_CHART_VERSION=

# Optional: Logging
LOG_LEVEL=info
